@model LoginModel

@{
    Layout = "";
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Psicossoma.Webapp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style type="text/css">
            .gradient-custom {
            /* fallback for old browsers */

            background: #088fcc;
            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to right, rgba(2, 34, 49, 1), rgba(8, 143, 204, 1));
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right, rgba(2, 34, 49, 1), rgba(8, 143, 204, 1))
        }

        .icons {
            display: grid;
            max-width: 100%;
            grid-template-columns: repeat(auto-fit, minmax(100px, 1fr) );
            gap: 1.25rem;
        }
        .icon {
            background-color: var(--bs-light);
            border-radius: .25rem;
        }
        .bi {
            margin: .25rem;
            font-size: 2.5rem;
        }
        .label {
            font-family: var(--bs-font-monospace);
        }
        .label {
            display: inline-block;
            width: 100%;
            overflow: hidden;
            padding: .25rem;
            font-size: .625rem;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .btn-login {
            color: #fff;
            background-image: linear-gradient(to bottom, #005C95, #002b46);
            border-color: #005C95;
        }
            .btn-login:hover {
                color: #fff;
                background-image: linear-gradient(to bottom, #002b46, #005C95);
                border-color: #002b46;
                text-shadow: 2px 2px 2px #555;
            }

        .error {
            color: #c00;
        }
    </style>
</head>
<body style=" overflow: hidden;">
    <section class="vh-100 gradient-custom">
        <div class="container py-1 h-100" style="z-index: 2;">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-6 col-xl-5">
                    <div class="card bg-light text-dark" style="border-radius: 1rem;">
                        <div class="card-body px-4 text-center">
                            <form id="formLogin" action="" method="post">
                                <div class="mt-md-3 mb-md-3">
                                    <div class="mb-4 pb-1">
                                        <img src="~/img/logo.png" alt="Psicossoma" style=" width: 70%; height: auto;" />                
                                    </div>
                                    <div class="input-group form-white mb-2">
                                        <input type="text" name="Email" id="Email" class="form-control form-control-sm" placeholder="E-mail" aria-label="E-mail" aria-describedby="basic-addon1" />
                                        <span class="input-group-text px-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-at" viewBox="0 0 16 16">
                                                <path d="M13.106 7.222c0-2.967-2.249-5.032-5.482-5.032-3.35 0-5.646 2.318-5.646 5.702 0 3.493 2.235 5.708 5.762 5.708.862 0 1.689-.123 2.304-.335v-.862c-.43.199-1.354.328-2.29.328-2.926 0-4.813-1.88-4.813-4.798 0-2.844 1.921-4.881 4.594-4.881 2.735 0 4.608 1.688 4.608 4.156 0 1.682-.554 2.769-1.416 2.769-.492 0-.772-.28-.772-.76V5.206H8.923v.834h-.11c-.266-.595-.881-.964-1.6-.964-1.4 0-2.378 1.162-2.378 2.823 0 1.737.957 2.906 2.379 2.906.8 0 1.415-.39 1.709-1.087h.11c.081.67.703 1.148 1.503 1.148 1.572 0 2.57-1.415 2.57-3.643zm-7.177.704c0-1.197.54-1.907 1.456-1.907.93 0 1.524.738 1.524 1.907S8.308 9.84 7.371 9.84c-.895 0-1.442-.725-1.442-1.914" />
                                            </svg>
                                        </span>                                        
                                    </div>
                                    <div class="input-group form-white mb-2">
                                        <input type="password" name="Password" id="Password" class="form-control form-control-sm" placeholder="Senha" aria-label="Senha" aria-describedby="basic-addon2" />
                                        <span class="input-group-text">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
                                                <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z"/>
                                                <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                            </svg>
                                        </span>                                        
                                    </div>
                                    <p class="small mb-3 pb-lg-2">
                                        <a class="text-dark" href="#" onclick="EsqueciMinhaSenha();">Esqueceu a senha?</a>
                                    </p>
                                    <button type="submit" class="btn btn-login btn-sm px-4">Entrar</button>
                                </div>
                                @Html.AntiForgeryToken() 
                                @Html.ValidationSummary(true)
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/messages_pt_BR.js"></script>
    <script type="text/javascript">
        //$.validator.setDefaults({
        //    submitHandler: function () {
                //alert("submitted!");
                //return false;
        //    }
        //});

        $(document).ready(function () {
            $("#formLogin").validate({
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: "required"
                },
                errorElement: "span",
                errorPlacement: function (error, element) {
                    let customError = $([
                        '<span class="invalid-feedback mt-0 mb-2 d-block text-start">',
                        '  <span class="error-box mb-0 d-block">',
                        //'    <span class="form-error-icon badge badge-danger text-uppercase">Error</span>',
                        //'    <span class="form-error-icon">',
                        //'      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="darkRed" class="bi bi-exclamation-circle" viewBox="0 0 16 16">',
                        //'        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />',
                        //'        <path d = "M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z" /> ',
                        //'      </svg > ',
                        //'    </span>',
                        '  </span>',
                        '</span>'
                    ].join(""));

                    // Add `form-error-message` class to the error element
                    error.addClass("form-error-message");
                    // Insert it inside the span that has `mb-0` class
                    error.appendTo(customError.find('.error-box'));
                    // Insert your custom error
                    customError.insertBefore(element);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                    $(element).closest('.invalid-feedback').toggle();
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                    $(element).closest('.invalid-feedback').toggle();
                }
            });
        });
        //=== OnLoad ===
        //document.getElementById('txtsEmail').focus();
    </script>
</body>
</html>