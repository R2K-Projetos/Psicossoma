@using Ghb.Psicossoma.Webapp.Models.Enums;

@model PessoaViewModel

@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm("Create", "Pessoa", FormMethod.Post))
{
    <fieldset>
        <legend>Nova Pessoa</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @if (ViewBag.Message is not null)
        {
            <p style="border: 1px solid red">
                @ViewBag.Message
            </p>
        }

        <table>
            <tr>
                <td>@Html.LabelFor(a => a.Nome)</td>
                <td>@Html.TextBoxFor(a => a.Nome)</td>
                <td>@Html.ValidationMessageFor(a => a.Nome)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(a => a.NomeReduzido)</td>
                <td>@Html.TextBoxFor(a => a.NomeReduzido)</td>
                <td>@Html.ValidationMessageFor(a => a.NomeReduzido)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(a => a.Sexo)</td>
                <td>
                    @Html.DropDownList("Sexo", Model.OpcoesSexo)
                </td>
                <td>@Html.ValidationMessageFor(a => a.Sexo)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(a => a.Cpf)</td>
                <td>@Html.TextBoxFor(a => a.Cpf)</td>
                <td>@Html.ValidationMessageFor(a => a.Cpf)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(a => a.DataNascimento)</td>
                <td>@Html.TextBoxFor(a => a.DataNascimento, new { @type = "date" })</td>
                <td>@Html.ValidationMessageFor(a => a.DataNascimento)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(a => a.Email)</td>
                <td>@Html.TextBoxFor(a => a.Email)</td>
                <td>@Html.ValidationMessageFor(a => a.Email)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(a => a.Ativo)</td>
                <td>@Html.CheckBoxFor(a => a.Ativo)</td>
                <td>@Html.ValidationMessageFor(a => a.Ativo)</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Novo" /></td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}